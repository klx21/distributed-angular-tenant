{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "..",
    "baseUrl": ".",
    "outDir": "../tmp/src",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "declaration": false,
    "removeComments": false,
    "paths": {
      "@da/common": [
        "../common"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "node_modules"
    ],
    "types": [
      "node",
      "systemjs"
    ],
    "lib": [
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "dom",
      "es5"
    ]
  },
  "include": [
    "client/src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/bootstrapper.ts",
    "../common/models/app-config.ts",
    "output/**",
    "node_modules/**",
    "e2e/**",
    "vendor/**",
    "tmp/**",
    "dist/**",
    "server/**",
    "**/.baseDir.ts",
    "**/.baseDir.ts",
    "**/*-aot.ts"
  ]
}
